<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tasks.DolgunecFragment">


        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_horizontal1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="128dp"
            android:max="3000"
            app:layout_constraintStart_toEndOf="@+id/tv_farmer_1"
            app:layout_constraintTop_toTopOf="parent"
            app:trackCornerRadius="10dp"
            app:trackThickness="20dp" />

        <TextView
            android:id="@+id/tv_farmer_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="120dp"
            android:text="Farmer 1:"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_horizontal2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="188dp"
            app:layout_constraintStart_toEndOf="@+id/tv_farmer_1"
            app:layout_constraintTop_toTopOf="parent"
            app:trackCornerRadius="10dp"
            android:max="3000"
            app:trackThickness="20dp" />

        <TextView
            android:id="@+id/tv_farmer_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="180dp"
            android:text="Farmer 2:"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_horizontal3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="248dp"
            app:layout_constraintStart_toEndOf="@+id/tv_farmer_1"
            app:layout_constraintTop_toTopOf="parent"
            app:trackCornerRadius="10dp"
            android:max="3000"
            app:trackThickness="20dp" />

        <TextView
            android:id="@+id/tv_farmer_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="240dp"
            android:text="Farmer 3:"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/star_farmer_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/star_winner"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/progress_horizontal1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/star_farmer_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/star_winner"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/progress_horizontal2"
            app:layout_constraintTop_toTopOf="@id/star_farmer_1" />

        <ImageView
            android:id="@+id/star_farmer_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/star_winner"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/progress_horizontal2"
            app:layout_constraintTop_toTopOf="@id/star_farmer_2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/round_back_red"
            android:shadowRadius="5"
            android:text="Start"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

        <TextView
            android:id="@+id/tv_win_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tv_win_podium_1"
            app:layout_constraintTop_toBottomOf="@+id/progress_horizontal3" />

        <TextView
            android:id="@+id/tv_win_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tv_win_podium_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_win_podium_1" />

        <TextView
            android:id="@+id/tv_win3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tv_win_podium_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_win_podium_2" />

        <TextView
            android:id="@+id/tv_win_podium_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:text="1st:"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_horizontal3" />

        <TextView
            android:id="@+id/tv_win_podium_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:text="2st:"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_win_podium_1" />

        <TextView
            android:id="@+id/tv_win_podium_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:text="3st:"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_win_podium_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
